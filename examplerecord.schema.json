{
 "$schema": "http://json-schema.org/schema#",
 "$id": "https://github.com/DHSTTOS",
    "title": "Match JSON objects of type RAW01",

    "definitions": {
	"ip-address: { "anyOf": [
	    { "type": "string", "pattern": "^[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}$" }
	    { "type": "string", "pattern": "^[0-9a-f:]{3,39}$" },
	    ]
	}
    },

    "type": "object",
    "properties": {
	"id": 	 { "const": "RAW01" },
        "send" : { "#ref": "#/definitions/ip-address" },
        "recv" : { "#ref": "#/definitions/ip-address" },
        "prot" : { "type": "string", "enum": ["IP", "UDP", "TCP", "PN-IO"] },
        "size" : { "type": "integer", "minimum": 0, "maximum": 65536 },
        "time" : { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{0,9}$" }
}
}
